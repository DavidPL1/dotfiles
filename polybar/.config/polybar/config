; =======
; Top Bar
; =======
[bar/top]
; Size
monitor = ${env:MONITOR:}
width  = 100%
height = 50

; Offset
;offset-x = 50%
;offset-y = 50%

; Position
bottom = false

; Radius
radius = 0

; Align modules fixed to middle
fixed-center = true

; Colors
background = ${colors.background}
foreground = ${colors.foreground}

; Underline
line-size  = 4
line-color = ${colors.white}

; Border
border-size  = 0

; Padding
padding-left  = 0
padding-right = 0

; Margin of modules
module-margin-left  = 0
module-margin-right = 0

; Font
font-0 = Consolas:size=8;3

; Modlues
modules-left   = bspwm
modules-center = time date
modules-right  = volume cpu battery lock logout poweroff

; Cursor actions
cursor-click  = pointer
cursor-scroll = ns-resize

; Separator
separator = " "

; ===========
; CPU Module
; ==========
[module/cpu]
type = internal/cpu
interval = 2
format-underline = #f90000
label = CPU: %percentage%%

; ============
; bspwm Module
; ============
[module/bspwm]
type = internal/bspwm

; Mouse click
enable-click = false

; Mouse scroll
enable-scroll  = false
reverse-scroll = false

; Separator
label-separator = " "

; Dimmed label
label-dimmed         = %name%
label-dimmed-padding = 1

; Focused label
label-focused            = %name%
label-focused-foreground = ${colors.black}
label-focused-background = ${colors.blue}
label-focused-padding    = 1

; Occupied label
label-occupied            = %name%
label-occupied-foreground = ${colors.black}
label-occupied-background = ${colors.cyan}
label-occupied-underline  = ${colors.blue}
label-occupied-padding    = 1

; Empty labels
label-empty            = %name%
label-empty-foreground = ${colors.black}
label-empty-background = ${colors.cyan}
label-empty-padding    = 1

; Urgent labels
label-urgent            = %name%
label-urgent-foreground = ${colors.black}
label-urgent-background = ${colors.red}
label-urgent-padding    = 1

[module/vpn-openvpn-status]
type = custom/script
exec = /home/spectre/.config/polybar/modules/vpn-openvpn-status.sh
format-underline = #03fccf
click-left = /opt/cisco/anyconnect/bin/vpn connect vpn-gate-1.uni-bielefeld.de
interval = 5

[module/wlan]
type = internal/network
interface = wlp61s0
interval = 3.0

; format-connected = <ramp-signal> <label-connected>
format-connected = %{A1:networkmanager_dmenu:}<label-connected>%{A}
format-connected-underline = #55aa55
format-disconnected-underline = #f90000

label-connected = %essid%: %local_ip%
label-disconnected = %{A1:networkmanager_dmenu:}%ifname%%{A}

[module/eth]
type = internal/network
interface = enp0s31f6
interval = 3.0

format-connected = %{A1:networkmanager_dmenu:}<label-connected>%{A}
format-connected-underline = #55aa55
label-connected = eth: %local_ip%

format-disconnected-underline = #f90000
label-disconnected = %ifname%

; ===========
; Time Module
; ===========
[module/time]
type = internal/date

; Update interval
interval = 1.0

; Format
time = %H:%M:%S

; Label
label            = %time%
label-foreground = ${colors.black}
label-background = ${colors.cyan}
label-padding    = 1

[module/volume]
type = internal/volume

master-soundcard = default
speaker-soundcard = default
headphone-soundcard = default

;headphone-mixer = Headphone
;headphone-id = 16

mapping = true

format-volume = VOL: <label-volume>%
format-muted = <label-muted>
label-volume = %percentage%
label-muted = muted
label-muted-foreground = #aaa
format-volume-padding = 2
format-muted-padding = 2
format-underline = #0341fc

[module/battery]
type = internal/battery
battery = BAT0
adapter = ADP1
full-at = 98

format-charging = BAT: <label-charging>
format-discharging-underline = #ffb52a

format-discharging = BAT: <label-discharging>
format-charging-underline = #006400

format-full-underline = ${self.format-charging-underline}

; ===========
; Date Module
; ===========
[module/date]
type = internal/date

; Update interval
interval = 1.0

; Format
date = %A, %d %B

; Label
label            = %date%
label-foreground = ${colors.black}
label-background = ${colors.cyan}
label-padding    = 1

; ============
; Audio Module
; ============
[module/audio]
type = internal/pulseaudio

; Volume label
label-volume            = Volume: %percentage%%
label-volume-foreground = ${colors.black}
label-volume-background = ${colors.cyan}
label-volume-padding    = 1

; Muted label
label-muted            = Muted
label-muted-foreground = ${colors.black}
label-muted-background = ${colors.red}
label-muted-padding    = 1

; ==============
; Network Module
; ==============
[module/network]
type = internal/network

; Interface
interface = wlp61s0

; Connected label
label-connected            = Download: %downspeed%
label-connected-foreground = ${colors.black}
label-connected-background = ${colors.cyan}
label-connected-padding    = 1

; Disconnected label
label-disconnected            = Disconnected
label-disconnected-foreground = ${colors.black}
label-disconnected-background = ${colors.red}
label-disconnected-padding    = 1

; ===========
; Lock Module
; ===========
[module/lock]
type = custom/text

; Label
content            = Lock
content-foreground = ${colors.black}
content-background = ${colors.blue}
content-padding    = 1

; Mouse click
click-left = betterlockscreen -l

; =============
; Logout Module
; =============
[module/logout]
type = custom/text

; Label
content            = Logout
content-foreground = ${colors.black}
content-background = ${colors.blue}
content-padding    = 1

; Mouse click
click-left = bspc quit

; ===============
; Poweroff Module
; ===============
[module/poweroff]
type = custom/text

; Label
content            = Poweroff
content-foreground = ${colors.black}
content-background = ${colors.blue}
content-padding    = 1

; Mouse click
click-left = poweroff

